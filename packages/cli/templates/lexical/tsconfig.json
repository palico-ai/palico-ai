{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["es2021"],
    "strict": true,
    "module": "CommonJS",
    "target": "es2021",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
